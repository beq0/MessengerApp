<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_text_time"
            app:layout_constraintBottom_toBottomOf="@+id/chat_text"
            app:layout_constraintTop_toTopOf="@+id/chat_text"
            app:layout_constraintEnd_toStartOf="@+id/chat_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.07" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/my_chat_background"
            android:textSize="@dimen/chat_text_size"
            android:textColor="@color/white"
            android:padding="@dimen/chat_text_padding"
            android:layout_marginTop="@dimen/chat_text_top_margin"
            android:layout_marginEnd="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>