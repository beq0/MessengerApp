<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="@dimen/user_profile_icon_size"
            android:layout_height="@dimen/user_profile_icon_size"
            app:srcCompat="@drawable/avatar_image_placeholder"
            android:id="@+id/contact_item_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_item_name"
            app:layout_constraintStart_toEndOf="@+id/contact_item_img"
            app:layout_constraintTop_toTopOf="@+id/contact_item_img"
            android:layout_marginTop="@dimen/user_search_profile_name_margin_top"
            android:textSize="18sp"
            android:textColor="@color/mainTxtColor"
            android:layout_marginStart="20dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_item_last_message"
            app:layout_constraintTop_toBottomOf="@+id/contact_item_name"
            app:layout_constraintStart_toEndOf="@+id/contact_item_img"
            android:textSize="13sp"
            android:textColor="@color/secondaryTxtColor"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_item_last_message_time"
            app:layout_constraintTop_toTopOf="@+id/contact_item_name"
            app:layout_constraintBottom_toBottomOf="@+id/contact_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:textColor="@color/secondaryTxtColor"
            android:textSize="13sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>