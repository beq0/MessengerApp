<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_search_user_item_height">

    <ImageView
            android:layout_width="@dimen/user_profile_icon_size"
            android:layout_height="@dimen/user_profile_icon_size"
            app:srcCompat="@drawable/avatar_image_placeholder"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp" />

    <TextView
            android:text="Shinessa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_search_user_name"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="@dimen/user_search_profile_name_margin_top"
            android:textSize="18sp"
            android:textColor="@color/mainTxtColor"
            android:layout_marginStart="20dp" />

    <TextView
            android:text="Manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_search_user_profession"
            app:layout_constraintTop_toBottomOf="@+id/user_search_user_name"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:textSize="13sp"
            android:textColor="@color/secondaryTxtColor"
            android:layout_marginStart="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>